@model Question_Paper_Management.Models.QuestionPaper

@{
    ViewBag.Title = "Create";
}

<center class="container mt-3">
    <h2 class="text-center mb-4">Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row justify-content-center my-3">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row justify-content-center my-3">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row justify-content-center my-3">
            <div class="col-md-6">
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary btn-block me-2">Create</button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-block" })
                </div>
            </div>
        </div>
    }

</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
