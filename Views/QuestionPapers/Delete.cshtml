@model Question_Paper_Management.Models.QuestionPaper

@{
    ViewBag.Title = "Delete";
}

<center class="container mt-5">
    <h3 class="text-center">Are you sure you want to delete this?</h3>

    <div class="row justify-content-center mt-4">
        <div>
            <div class="mb-2" style="font-weight: 600; text-transform: capitalize;">Title: @Html.DisplayFor(model => model.Title)</div>

            <div class="mb-2" style="font-weight: 600; text-transform: capitalize;">Description: @Html.DisplayFor(model => model.Description)</div>

            <div class="mb-2" style="font-weight: 600; text-transform: capitalize;">Creation Date: @Html.DisplayFor(model => model.CreationDate)</div>

            <div class="mb-2" style="font-weight: 600; text-transform: capitalize;">Status: @Html.DisplayFor(model => model.Status)</div>

            <div class="mb-2" style="font-weight: 600; text-transform: capitalize;">Username: @Html.DisplayFor(model => model.User.Username)</div>
        </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="btn-group text-center">
                    <input type="button" value="Delete" class="btn btn-danger me-2" onclick="confirmDelete()" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</center>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this record?")) {
            document.forms[0].submit();
        }
    }
</script>
